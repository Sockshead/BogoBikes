<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bogobikes.app.Login">

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/fondo"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_below="@id/fondo"
        android:layout_marginTop="-130dp"
        android:src="@drawable/logo"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/hola"
        android:layout_width="115dp"
        android:layout_height="20dp"
        android:layout_below="@+id/logo"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/welcomebacktitle" />

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@+id/hola"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/usuario"
        android:hint="Usuario"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtUsuario"
        android:layout_centerHorizontal="true"
        android:background="@drawable/contrasena"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:paddingLeft="15dp" />

    <Button
        android:id="@+id/recordarme"
        android:layout_width="130dp"
        android:layout_height="18dp"
        android:layout_below="@+id/txtPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/rememberme" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="@+id/recordarme"
        android:layout_below="@+id/recordarme"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/loginbutton" />

    <TextView
        android:id="@+id/redes"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_below="@+id/btnLogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/or" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btnFace"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/redes"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
       />

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/btnTwitter"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_alignTop="@+id/btnFace"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnFace"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/googlebutton" />

    <Button
        android:id="@+id/btnCrear"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below="@+id/btnFace"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/donthaveacc" />
</RelativeLayout>